{
    "manifest_version": 3,
    "name": "YouTube Snapshot",
    "version": "1.1",
    "description": "Take YouTube video snapshots and save to clipboard or file.",
    "permissions": [
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/snapshot-icon.png"
            ],
            "matches": [
                "https://www.youtube.com/*"
            ]
        }
    ]
}